TARGET = enc_stat_lib
CFLAGS = -c -std=c99 -Wall

all: encoder

encoder: encoder.o enc_stat_lib.a
	gcc -std=c99 -Wall -o encoder encoder.o enc_stat_lib.a
	rm caesarXor.o stringUtils.o encoder.o

encoder.o: coders/encoder.c
	gcc $(CFLAGS) coders/encoder.c

enc_stat_lib.a: stringUtils.o caesarXor.o
	ar -rs enc_stat_lib.a stringUtils.o caesarXor.o

stringUtils.o: modules/stringUtils.c
	gcc $(CFLAGS) modules/stringUtils.c

caesarXor.o: modules/caesarXor.c
	gcc $(CFLAGS) modules/caesarXor.c

clean:
	rm -rf *.o encoder
	rm -rf *.a encoder