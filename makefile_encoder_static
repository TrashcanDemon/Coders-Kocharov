TARGET = enc_stat_lib
CFLAGS = -c -std=c99 -Wall

all: encoder

encoder: encoder.o enc_stat_lib.a
	gcc -std=c99 -Wall -o encoder encoder.o enc_stat_lib.a
	rm upperlower.o strip.o caesar.o xor.o encoder.o

encoder.o: coders/encoder.c
	gcc $(CFLAGS) coders/encoder.c

enc_stat_lib.a: upperlower.o strip.o caesar.o xor.o
	ar -rs enc_stat_lib.a upperlower.o strip.o caesar.o xor.o

upperlower.o: modules/upperlower.c
	gcc $(CFLAGS) modules/upperlower.c

strip.o: modules/strip.c
	gcc $(CFLAGS) modules/strip.c

caesar.o: modules/caesar.c
	gcc $(CFLAGS) modules/caesar.c

xor.o: modules/xor.c
	gcc $(CFLAGS) modules/xor.c

clean:
	rm -rf *.o encoder
	rm -rf *.a encoder