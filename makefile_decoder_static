TARGET = dec_stat_lib
CFLAGS = -c -std=c99 -Wall

all: decoder

decoder: decoder.o dec_stat_lib.a
	gcc -std=c99 -Wall -o decoder decoder.o dec_stat_lib.a
	rm caesarXor.o stringUtils.o decoder.o

decoder.o: coders/decoder.c
	gcc $(CFLAGS) coders/decoder.c

dec_stat_lib.a: stringUtils.o caesarXor.o
	ar -rs dec_stat_lib.a stringUtils.o caesarXor.o

stringUtils.o: modules/stringUtils.c
	gcc $(CFLAGS) modules/stringUtils.c

caesarXor.o: modules/caesarXor.c
	gcc $(CFLAGS) modules/caesarXor.c

clean:
	rm -rf *.o decoder
	rm -rf *.a decoder